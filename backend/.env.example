################################################################################
# SPMVV Exam Results - Environment Configuration
# Copy this file to .env and update with your actual values
################################################################################

# =============================================================================
# Django Core Settings
# =============================================================================

# Secret key for Django (MUST be changed in production!)
# Generate new key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-change-in-production

# Debug mode (True for development, False for production)
DEBUG=False

# Comma-separated list of allowed hosts
# Update with your server IP or domain name
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================

# Database engine (leave as is for MySQL)
DB_ENGINE=django.db.backends.mysql

# Database name
DB_NAME=spmvv_results

# Database user
DB_USER=spmvv_user

# Database password (MUST be changed!)
DB_PASSWORD=changeme

# Database host (localhost for local MySQL, 'db' for Docker)
DB_HOST=localhost

# Database port
DB_PORT=3306

# MySQL root password (used during setup)
MYSQL_ROOT_PASSWORD=changeme

# =============================================================================
# JWT Authentication Settings
# =============================================================================

# Access token lifetime in minutes (default: 60 = 1 hour)
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in minutes (default: 1440 = 24 hours)
JWT_REFRESH_TOKEN_LIFETIME=1440

# =============================================================================
# Security Settings
# =============================================================================

# Force HTTPS redirect (set to True in production with SSL)
SECURE_SSL_REDIRECT=False

# Secure session cookie (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# Secure CSRF cookie (set to True in production with HTTPS)
CSRF_COOKIE_SECURE=False

# XSS filter
SECURE_BROWSER_XSS_FILTER=True

# Content type sniffing protection
SECURE_CONTENT_TYPE_NOSNIFF=True

# Clickjacking protection
X_FRAME_OPTIONS=DENY

# =============================================================================
# File Upload Settings
# =============================================================================

# Maximum upload size in bytes (default: 10485760 = 10MB)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# Default Admin User Configuration
# =============================================================================

# Default admin username (used by init_admin command)
ADMIN_USERNAME=admin

# Default admin password (MUST be changed after first login!)
ADMIN_DEFAULT_PASSWORD=SpmvvExamResults@2026

################################################################################
# IMPORTANT SECURITY NOTES:
# 1. Change SECRET_KEY to a unique, random value
# 2. Change all default passwords
# 3. Set DEBUG=False in production
# 4. Enable SSL/HTTPS in production and set SECURE_* settings to True
# 5. Restrict ALLOWED_HOSTS to your actual domain/IP
# 6. Never commit this file with real credentials to version control
################################################################################
